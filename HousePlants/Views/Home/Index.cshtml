@{
    ViewData["Title"] = "Home Page";
    string[] TableHeaders = new string[] {"Id"
          ,"Name"
          ,"Sun"
          ,"Image"
          ,"Water"
          ,"Notes"};
}

<header><h1>House Plant Catalog</h1></header>
<div class="body">
    <section id="owned">
            @foreach (var plant in Model)
            {
                <div class="plant">
                    <aside class="plant-header">
                        <h2 class="plant-name">@plant.Name</h2>
                        <img class="sun" src="@plant.Sun" alt="sun need" />
                    </aside>
                    <aside class="plant-info">
                        <img src="@plant.Image" alt="plant photo" class="image">
                        <p class="water-frequency">💧 @plant.Water 💧</p>
                        <p class="fertilize">∴ @plant.Notes ∴</p>
                    </aside>
                </div>
            }
        </section>
    <section class="wanted">
        <div class="dropdown">

            <select id="dropdown" size="1" placeholder="Select New Plant">
                <option class="choose-plant" value="" disabled selected>Select New Plant</option>
                @foreach (var Data in Model)
                {
                    <option class="choose-plant">@Data.Name</option>
                }

            </select>
        </div>
        <button id="submit"><img src="./plant-images/add.png" id="add" alt="Add Plant"></button>
    </section>


    <div class="border" id="left"></div>
    <div class="border" id="right"></div>
    <div class="border" id="top"></div>
    <div class="border" id="bottom"></div>
</div>
